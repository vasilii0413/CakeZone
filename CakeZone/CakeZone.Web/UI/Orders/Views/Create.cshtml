@using CakeZone.EntityFramework.Entities;
@model OrderModel
<style>
    .overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 999;
    }
    .overlay form {
        background: #fff; 
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);            
        color: #333; 
        }

     .overlay label {
        font-weight: bold;
        color: #555; 
        }
</style>

<div class="overlay" >
    <form method="post" asp-action="Create" asp-controller="Orders" id="orderForm">
        <span>Please introduce your personal information</span>

        <div class="form-group">
            <div class="form-text">
                <input asp-for="OrderId" type="hidden" value="0" class="form-control" />
                <span asp-validation-for="OrderId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group d-none">
            <label asp-for="CakeId" class="control-label"></label>
            <select asp-for="CakeId" class="form-control" asp-items="ViewBag.CakeId"></select>
        </div>
        <div class="form-group">
            <label>Full name:</label>
            <div class="form-text">
                <i class="fa fa-user" aria-hidden="true"></i>
                <input required asp-for="UserFullName" class="form-control" />
                <span asp-validation-for="UserFullName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label>Email:</label>
            <div class="form-text">
                <i class="fa fa-envelope" aria-hidden="true"></i>
                <input required asp-for="UserEmail" class="form-control"/>
                <span asp-validation-for="UserEmail" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label>Phone number:</label>
            <div class="form-text">
                <i class="fa fa-phone" aria-hidden="true"></i>
                <input required asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>
<br />
        <div class="clear"></div>
        <input class="btn btn-primary" type="submit" value="Order Now">
        <a asp-controller="Cakes" asp-action="Index" class="btn btn-danger" id="cancelButton">Cancel</a>

    </form>
</div>
