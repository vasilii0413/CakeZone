@using CakeZone.EntityFramework.Entities;
@model IEnumerable<CoverModel>

@{
    ViewData["Title"] = "Cover";
    Layout = "_Layout";
}

<h1>List Of Covers</h1>
<style>

    td {
        padding: 10px 0;
        width:100px;
    }

    tr {
        text-align: center;
    }
</style>

<table class="table">
    <a asp-action="Create" class="btn btn-primary">Create New</a>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CoverId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CoverName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CoverDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="table-primary">
            <td>
                @Html.DisplayFor(modelItem => item.CoverId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CoverName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CoverDescription)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.CoverId">Edit</a> 
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CoverId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
