@using CakeZone.EntityFramework.Entities;
@model CoverModel
@{
    ViewData["Title"] = "Cover";
    Layout = "_Layout";
}
<h1>Cover</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
