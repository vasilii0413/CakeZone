@using CakeZone.EntityFramework.Entities;
@model CakeModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Cake</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Create" asp-controller="Cakes">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="CakeId" type="hidden" value="0" class="form-control" />
                <span asp-validation-for="CakeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CakeName" class="control-label"></label>
                <input required asp-for="CakeName" class="form-control" />
                <span asp-validation-for="CakeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CakeDescription" class="control-label"></label>
                <input required asp-for="CakeDescription" class="form-control" />
                <span asp-validation-for="CakeDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input required asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input required asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageURL" class="control-label"></label>
                <input required asp-for="ImageURL" class="form-control" />
                <span asp-validation-for="ImageURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cover" class="control-label"></label>
                <select  name="CoverId" asp-for="CoverId" class="form-control" asp-items="ViewBag.Covers"></select>
            </div>
            <div class="form-group">
                <label asp-for="Filling" class="control-label"></label>
                <select name="FillingId" asp-for="Filling" class="form-control" asp-items="ViewBag.Fillings"></select>
            </div>
            <div class="form-group">
                <br />
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-area="" asp-controller="Cakes" asp-action="Index">Back to List</a>
</div>
