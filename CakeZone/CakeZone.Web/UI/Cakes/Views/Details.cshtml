@using CakeZone.EntityFramework.Entities;
@model CakeModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<style>
    .col-sm-2{
        background-image:linear-gradient(70deg,red,navy);
        -webkit-background-clip:text;
        color:transparent;
        font-size:20px;
    }
    .col-sm-10{
        background-image: linear-gradient(40deg,navy,red);
        -webkit-background-clip: text;
        color: transparent;
        font-size: 19px;
        font-weight:bold;
    }
</style>
<body style="background-image:url(https://img.freepik.com/premium-vector/abstract-background-dekstop-vector-illustration_354831-187.jpg);opacity:0.9;background-size:cover">
<div> 
    <dl class="row">
        <div class="col-sm-12">
            <dt>
                    <img src="@Model.ImageURL" style="width: 350px;border-radius: 10px;margin-bottom:20px;height:300px" />
            </dt>
        </div>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CakeName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CakeName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CakeDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CakeDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Weight)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Weight)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cover)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cover.CoverName)
                @Html.DisplayFor(model => model.Cover.CoverDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Filling)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Filling.FillingType)
            @Html.DisplayFor(model => model.Filling.FillingDescription)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.CakeId">Edit</a>
    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model?.CakeId">Delete</a>
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
    
</div>
</body>
